doctype html
html
  include header.jade
  body(onload="prettyPrint()")
    div#wrap
      include menu.jade
      div.container

        div.page-header
          h1 Tag: #{tag}
          each tag in tag_posts
            if formatter.format(post.date,"MMMM yyyy") != last_month
              h3 #{formatter.format(tag.date,"MMMM yyyy")}

            h4 #{formatter.format(tag.date,"dd")} -
              a(href='#{tag.url}') #{tag.title}

            - var last_month = formatter.format(post.date,"MMMM yyyy")

  include footer.jade
