doctype html
html
  include header.jade
  body(onload="prettyPrint()")
    div#wrap
      include menu.jade
      div.container
        div.page-header
          h1 Blog

          each post in published_posts
            a(href="#{post.uri}")
              h1 #{post.title}
            p #{formatter.format(post.date,"dd MMMM yyyy")}
            p !{post.body}

          hr

          p Older posts are available in the <a href="archive.html" shape="rect">archive</a>.

  include footer.jade






