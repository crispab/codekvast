{{>layout/header}}

{{#callbackUrl}}
<h2>{{customerName}} Heroku details</h2>
<table>
    <tr>
        <th>Callback URL:</th>
        <td class="pl-3"><code>{{{callbackUrl}}}</code></td>
    </tr>
    <tr>
        <th>Access token:</th>
        <td class="pl-3"><code>-H 'Authorization: Bearer {{{accessToken}}}'</code></td>
    </tr>
    <tr>
        <th>Expires at:</th>
        <td class="pl-3"><code>{{expiresAt}}</code> (in {{expiresIn}})</td>
    </tr>
</table>
{{/callbackUrl}}

{{^callbackUrl}}
<div class="alert alert-danger" role="alert">Cannot get Heroku details for {{customerName}}</div>
{{/callbackUrl}}

<p><a href="javascript:window.history.back()">Back to Heroku projects</a></p>

<hr>
<p><a href="/userinfo">All projects</a></p>
<hr>
<form class='form' method='POST' action='/logout'>
    <button>Log in as another user</button>
</form>
{{>layout/footer}}
