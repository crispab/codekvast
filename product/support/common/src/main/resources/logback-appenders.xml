<included>
    <jmxConfigurator/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${codekvast.logPath:-build/log}/${codekvast.log.baseName:-test}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${codekvast.logPath:-build/log}/${codekvast.log.baseName:-test}.log.%i.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>${codekvast.log.maxFileGenerations:-5}</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${codekvast.log.maxFileSize:-50MB}</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%date %level %logger.%method\(\) [%line] %m%n%rootException</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level %logger.%method\(\) [%line] %m%n%rootException</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${codekvast.log.consoleThreshold:-OFF}</level>
        </filter>
    </appender>

</included>
